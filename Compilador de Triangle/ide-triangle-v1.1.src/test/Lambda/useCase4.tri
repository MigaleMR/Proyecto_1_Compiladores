let
 var arrayA: array 4 of Integer;
 var arrayB: array 4 of Integer;
 var i: Integer;
 var f: lambda(x: Integer): Integer
in
 begin
   arrayA[0]:= 1; arrayA[1]:= 2;
   arrayA[2]:= 3; arrayA[3]:= 4;
   f:= lambda(x: Integer): Integer ~ x * 2;

   for i:= 0 to 3 do
     arrayB[i]:= f(arrayA[i]);
   for i:= 0 to 3 do
     putint(arrayB[i])
 end