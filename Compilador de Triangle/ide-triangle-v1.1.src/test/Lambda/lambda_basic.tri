! Test: assign an anonymous function to a variable and pass it to a proc
let
  var n: Integer;
  var inc: lambda (const x: Integer) : Integer;
  proc applyTwice(f: func (const x: Integer) : Integer, var a: Integer) ~
    a := f(f(a))
  
in
begin
  n := 5;
  inc := lambda (const x: Integer) : Integer ~ x + 1;
  applyTwice(inc, var n);
  putint(n)
end
